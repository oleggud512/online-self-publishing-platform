{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    
    "resolveJsonModule": true, // enables json
    "esModuleInterop": true,   // enables json
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
